<?xml version="1.0"?>
<component name="org.nuxeo.ecm.conceptshare.listener">

  <extension target="org.nuxeo.ecm.core.event.EventServiceComponent" point="listener">
    <listener name="conceptshareCallback" postCommit="false" async="false"
      class="org.nuxeo.ecm.conceptshare.ConceptshareCallbackListener">
      <event>ASSET_CREATED</event>
      <event>ASSET_ERROR</event>
    </listener>
    <listener name="conceptShareReviewCreated" postCommit="false" async="false"
      class="org.nuxeo.ecm.conceptshare.ConceptShareReviewCreatedListener">
      <event>documentCreated</event>
    </listener>
    <listener name="assetAddedToConceptShareReview" postCommit="false" async="false"
      class="org.nuxeo.ecm.conceptshare.AssetAddedToConceptShareReviewListener">
      <event>addedToCollection</event>
    </listener>
    <listener name="assetRemovedFrompConceptShareReview" postCommit="false" async="false"
      class="org.nuxeo.ecm.conceptshare.RemovedFromConceptShareReviewListener">
      <event>removedFromCollection</event>
    </listener>
    <listener name="assetVersioned" postCommit="false" async="false"
      class="org.nuxeo.ecm.conceptshare.AssetVersionedListener">
      <event>aboutToCheckIn</event>
      <event>documentRestored</event>
    </listener>
  </extension>

</component>